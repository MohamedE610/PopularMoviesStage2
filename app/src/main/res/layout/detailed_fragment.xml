<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f9ebcc"

    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e3c665"

                android:textColor="#0a0a09"
                android:textSize="30dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Poster_Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="30dp"
                    >


                    <TextView
                        android:id="@+id/Release_Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0a0a09"
                        android:textSize="20dp"
                        />

                    <TextView
                        android:id="@+id/Vote_Rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:textSize="20dp"
                        android:textColor="#0a0a09"
                        android:textAlignment="center"
                        />
                    <ImageView
                        android:id="@+id/Favourite"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/staroff"
                        android:paddingTop="20dp"
                        />
                    <!--<TextView
                        android:id="@+id/Favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.78"
                        android:background="#e3c665"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:text="Favourite"
                        android:textSize="30dp" />-->

                </LinearLayout>
            </LinearLayout>
            <!--Overview-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <TextView
                android:id="@+id/OverviewTitle"
                android:background="#e3c665"
                android:text="Overview"
                android:textSize="30dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#0a0a09"
                />


            <TextView
                android:id="@+id/Overview"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0a0a09"
                />
            </LinearLayout>
            <!--Overview-->
            <!--trailers-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 >
            <TextView
                android:id="@+id/trailers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Trailers:"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:background="#e3c665"
                android:textSize="30dp"
                android:textColor="#0a0a09"

                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:id="@+id/button"
                        android:src="@drawable/powerampiconmax"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"

                        />
</RelativeLayout>
                <TextView
                    android:id="@+id/TrailerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0a0a09"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    />

               </LinearLayout>

            </LinearLayout>
            <!--trailers-->
            <!--Reviews-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/Reviews"
                    android:background="#e3c665"
                    android:text="Reviews"
                    android:textSize="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="#0a0a09"
                    />

                <TextView
                    android:padding="20dp"
                    android:id="@+id/ReviewAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0a0a09"
                    android:paddingBottom="20dp"
                     />

                <TextView
                    android:id="@+id/ReviewContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="#0a0a09"
                    />

            </LinearLayout>
            <!--Reviews-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>